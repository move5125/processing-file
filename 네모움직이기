int col = 0;

void setup() {
  size(600,400);

}

void draw() {
 background(2,col,0);
  fill(255,0,0,50);
  ellipse(200,100,50,50);
  fill(0,0,255,50);
  ellipse(400,300,50,50);
  fill(90,0,0,50);
  ellipse(mouseX,mouseY,50,50);
  fill(0,0,90,50);
  ellipse(mouseY,mouseX,50,50);
  stroke(0,200,50);
}

void mousePressed() {
  col = col + 10;
  println(col);
  
}
